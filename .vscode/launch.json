    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python:Streamlit",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "${file}",
                "--server.port",
                "2000"
            ]
        },
        {
            "name": "Python:FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "${file}",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ]
        }
    ]
}